@article{hambletonGrayAreasAnalyzingNavigable2020,
  title = {Gray {{AreasAnalyzing Navigable Narratives}} in the {{Not-So-Uncanny Valley Between Soundwalks}}, {{Video Games}}, and {{Literary Computer Games}}},
