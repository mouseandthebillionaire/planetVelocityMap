@inproceedings{eylesPlayfulAmbience2011,
  title = {Playful {{Ambience}}},
  booktitle = {{{DiGRA}} '11 - {{Proceedings}} of the 2011 {{DiGRA International Conference}}: {{Think Design Play}}},
